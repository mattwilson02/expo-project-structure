{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/components/*": ["./src/components/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/constants/*": ["./src/constants/*"],
			"@/utils/*": ["./src/utils/*"],
			"@/app/*": ["./app/*"],
			"@/assets/*": ["./assets/*"],
			"@/services/*": ["./src/services/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
